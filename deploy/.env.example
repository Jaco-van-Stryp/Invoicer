# =========================================================
# Invoicer Production Environment Configuration
# =========================================================
# Copy this file to .env in your deploy directory ($HOME/invoicer/.env)
# and fill in the actual values.
#
# IMPORTANT: Never commit the real .env file to source control.
# =========================================================

# ---------------------------------------------------------
# AWS ECR Registry (used by docker-compose to pull image)
# Format: <ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com
# ---------------------------------------------------------
ECR_REGISTRY=123456789012.dkr.ecr.ap-southeast-2.amazonaws.com

# ---------------------------------------------------------
# ASP.NET Core
# ---------------------------------------------------------
ASPNETCORE_ENVIRONMENT=Production

# ---------------------------------------------------------
# PostgreSQL Connection
# ---------------------------------------------------------
ConnectionStrings__DefaultConnection=Host=<PI_LOCAL_IP>;Port=5432;Database=Invoicer;Username=postgres;Password=<STRONG_PASSWORD>

# ---------------------------------------------------------
# JWT Authentication
# ---------------------------------------------------------
Jwt__Secret=<RANDOM_SECRET_AT_LEAST_32_CHARACTERS>
Jwt__Issuer=https://invoicer.co.nz
Jwt__Audience=https://invoicer.co.nz
Jwt__ExpirationMinutes=480

# ---------------------------------------------------------
# AWS SES (Email)
# ---------------------------------------------------------
SesSettings__Region=ap-southeast-2
SesSettings__FromEmail=noreply@invoicer.co.nz
SesSettings__FromName=Invoicer

# ---------------------------------------------------------
# MinIO (S3-compatible file storage)
# ---------------------------------------------------------
Minio__Endpoint=<PI_LOCAL_IP>:9000
Minio__AccessKey=<MINIO_ACCESS_KEY>
Minio__SecretKey=<MINIO_SECRET_KEY>
Minio__BucketName=invoicer

# ---------------------------------------------------------
# AWS Credentials (used by SES SDK)
# ---------------------------------------------------------
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
AWS_REGION=ap-southeast-2

# ---------------------------------------------------------
# Cloudflare Tunnel
# ---------------------------------------------------------
CLOUDFLARE_TUNNEL_TOKEN=<YOUR_TUNNEL_TOKEN>

# ---------------------------------------------------------
# CORS (allowed origins for the API)
# ---------------------------------------------------------
Cors__AllowedOrigins__0=https://invoicer.co.nz
