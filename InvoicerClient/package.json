{
  "name": "invoicer-client",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "generate": "node generate.js",
    "serve:ssr:InvoicerClient": "node dist/InvoicerClient/server/server.mjs",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none ng serve\" \"wait-on tcp:4200 && electron electron/main.js\"",
    "electron:build": "ng build --configuration production && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.7.0",
  "dependencies": {
    "@angular/animations": "^21.1.4",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "@primeuix/themes": "^2.0.3",
    "chart.js": "^4.5.1",
    "express": "^5.1.0",
    "lottie-web": "^5.13.0",
    "ngx-lottie": "^21.2.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "nz.co.jacovanstryp.invoicerclient",
    "productName": "Invoicer",
    "copyright": "Copyright Â© 2026 Jaco van Stryp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/InvoicerClient/browser/**/*",
      "electron/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
